#include<stdio.h>
void main(){
	int ele,a[100],i;
	printf("Enter the number of elements :");
	scanf("%d",&ele);
	for(i = 0;i < ele ; i ++){
		printf("Enter the element %d :",i);
		scanf("%d",&a[i]);
	}
	for(i = 0 ; i <ele ; i++){
		if(a[i] % 2 == 0){
			printf("%d is even\n",a[i]);
		}
		else{
			printf("%d is odd\n",a[i]);
		}
	}
}
